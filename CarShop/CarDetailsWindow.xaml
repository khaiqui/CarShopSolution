        <TextBox x:Name="QuantityTextBox" HorizontalAlignment="Left" Height="44" Margin="206,484,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="266" TabIndex="0"/>
        <TextBox x:Name="DescriptionTexBox" HorizontalAlignment="Left" Height="184" Margin="206,276,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="686" TabIndex="0"/>
        <ComboBox x:Name="ModelComboBox" HorizontalAlignment="Left" Height="46" Margin="626,551,0,0" VerticalAlignment="Top" Width="266"/>
        <ComboBox x:Name="DiscountComboBox" HorizontalAlignment="Left" Height="44" Margin="206,551,0,0" VerticalAlignment="Top" Width="266"/>
        <TextBox x:Name="PriceTextBox" HorizontalAlignment="Left" Height="44" Margin="626,481,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="266" TabIndex="0"/>
        <Label Content="Price" HorizontalAlignment="Left" Height="46" Margin="524,481,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.5,0.5" Foreground="White"/>
       
    </Grid>
