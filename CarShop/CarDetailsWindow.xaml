        <Button x:Name="QuitButton" Content="Quit" HorizontalAlignment="Left" Height="50" Margin="1074,175,0,0" VerticalAlignment="Top" Width="132" Click="QuitButton_Click"/>
        <Label Content="Description" HorizontalAlignment="Left" Height="46" Margin="88,276,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.475,0.076" Foreground="White"/>
