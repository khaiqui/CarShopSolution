        <Label Content="Image" HorizontalAlignment="Left" Height="44" Margin="524,134,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.475,0.076" Foreground="White"/>
        <Label Content="Model" HorizontalAlignment="Left" Height="46" Margin="524,551,0,0" VerticalAlignment="Top" Width="90" RenderTransformOrigin="0.475,0.076" Foreground="White"/>
        <Label Content="Discount" HorizontalAlignment="Left" Height="46" Margin="88,551,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.475,0.076" Foreground="White"/>
        <Label Content="Quantity" HorizontalAlignment="Left" Height="46" Margin="88,481,0,0" VerticalAlignment="Top" Width="112" RenderTransformOrigin="0.5,0.5" Foreground="White"/>
        <TextBox x:Name="ProductIdTextBox" HorizontalAlignment="Left" Height="45" Margin="206,130,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="266" TabIndex="0"/>
